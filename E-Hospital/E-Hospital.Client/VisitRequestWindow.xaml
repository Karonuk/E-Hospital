<controls:MetroWindow x:Class="E_Hospital.Client.VisitRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:E_Hospital.Client"
        mc:Ignorable="d"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="Visit Request" WindowStartupLocation="CenterScreen" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
        <TextBox Name="CommentTextBox" controls:TextBoxHelper.Watermark="Comment" Margin="0 0 0 10"></TextBox>
        <ComboBox Name="DoctorsComboBox" Margin="0 0 0 15" SelectionChanged="DoctorsComboBox_OnSelectionChanged"></ComboBox>
        <Button Content="Send" Style="{StaticResource AccentedSquareButtonStyle}" Click="SendButton_OnClick"></Button>
    </StackPanel>
</controls:MetroWindow>
